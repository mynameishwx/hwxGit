<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.demo.mapper.acc_roleMapper">
    <select id="getbyuserId_hwx" resultType="com.demo.pojo.acc_role">
        select acc_roleId,accId,roleId from acc_role
        <where>
            <if test="accId!=null and accId!=''">accId=#{accId}</if>
        </where>
    </select>
   <select id="insert_hwx" parameterType="com.demo.pojo.acc_role" resultType="integer">
       insert into  acc_role(accId,roleId) values(#{accId},#{roleId})
   </select>
    <update id="updata_hwx" parameterType="com.demo.pojo.role">
        update acc_role set

        <if test="img!=null and img!=''">img=#{img}</if>
        <if test="(img!=null and img!='') and (sex!=null and sex!='')">,</if>

        <if test="sex!=null and sex!=''">sex=#{sex}</if>
        where  id=#{id}
    </update>
</mapper>